<mvc:View
		controllerName="project.app.controller.main"
		displayBlock="true"
		xmlns="sap.m"
		xmlns:core="sap.ui.core"
		xmlns:mvc="sap.ui.core.mvc">
	<App
			id="idAppControl">
		<pages>
			<Page
					id="mainPage"
					title="{i18n>title}">
				<content>
				    <SearchField
							id="searchField"
							liveChange="onTableSearch"
							placeholder="{i18n>SEARCH}"
							showSearchButton="false" />
				    <Table
				    		id="idPersonTable"
							items="{personalModel>/}"
				    		noDataText="Nothing">
				        <columns>
				            <Column>
				                <header>
				                    <Label text="{i18n>FIRST_NAME}" id="label0" />
				                </header>
				            </Column>
				            <Column>
				                <header>
				                    <Label text="{i18n>MIDDLE_NAME}" id="label1" />
				                </header>
				            </Column>
				            <Column>
				                <header>
				                    <Label text="{i18n>LAST_NAME}" id="label2" />
				                </header>
				            </Column>
				            <Column>
				                <header>
				                    <Label text="{i18n>POSITION}" id="label3" />
				                </header>
				            </Column>
				            <Column>
				                <header>
				                    <Label text="{i18n>PHONE}" id="label4" />
				                </header>
				            </Column>
				            <Column>
				                <header>
				                    <Label text="{i18n>ADDRESS}" id="label5" />
				                </header>
				            </Column>
				            <Column vAlign="Middle" width="45px" />
	                        <Column vAlign="Middle" width="45px" />
				    	</columns>
						<items>
				            <ColumnListItem type="Active">
				                <cells>
				                    <Text text="{personalModel>firstName}" />
				                    <Text text="{personalModel>middleName}" />
				                    <Text text="{personalModel>lastName}" />
				                    <Text text="{personalModel>post}" />
				                    <Text text="{personalModel>number}" />
				                    <Text text="{personalModel>address}" />
				                    <core:Icon class="icon" press="onEdit" size="1.8rem" src="sap-icon://edit" />
	                                <core:Icon class="icon" press="onRemove" size="1.8rem" src="sap-icon://decline" />
				                </cells>
				            </ColumnListItem>
				        </items>
					</Table>
				</content>
			<headerContent>
				<Button
						id="signUpButton"
						press="onOpenSignupDialog"
						text="{i18n>SIGN_UP}" />
				<Button
						id="logInButton"
						press="onOpenLoginDialog"
						text="{i18n>LOG_IN}" />
				<Button
						id="logOutButton"
						press="onLogout"
						text="{i18n>LOG_OUT}"
						visible="false" />
			    <Button
						id="addPersonButton"
						icon="sap-icon://add"
						press="onAdd"
						text="{i18n>ADD}" />
			</headerContent>
			</Page>
		</pages>
	</App>
</mvc:View>